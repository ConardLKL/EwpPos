<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:background="@drawable/ticket_query_list_selector"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/leave_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="08:20"
            android:textColor="@color/ticket_query_leavedate_txt_color"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/ticket_query_item_pading"
            android:gravity="left"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/start_station_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@drawable/start_station"
                    android:drawablePadding="5dp"
                    android:text="杭州客运中心 站"
                    android:textColor="@color/ticket_query_routename_txt_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/end_station_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/end_station"
                    android:drawablePadding="5dp"
                    android:text="上海南站"
                    android:textColor="@color/ticket_query_routename_txt_color"
                    android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ticket_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="821"
                android:textColor="@color/ticket_query_price_txt_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/bus_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高一座"
                android:textColor="@color/ticket_query_bustype_txt_color"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout"
        android:background="@color/layout_view_line" />

</RelativeLayout>