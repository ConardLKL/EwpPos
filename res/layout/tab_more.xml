<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <include layout="@layout/include_title" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/maintab_view_line" />

    <ScrollView style="@style/scroll_style" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/p_m_layout_margin"
                android:background="@drawable/more_view_none_selector"
                android:orientation="vertical"
                android:padding="1dp" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_upcorners_selector"
                    android:padding="@dimen/p_m_layout_padding" >

                    <TextView
                        style="@style/persion_info_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/p_m_tv_padding"
                        android:text="@string/sofe_vode" />

                    <TextView
                        android:id="@+id/tv_version"
                        style="@style/persion_info_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/p_m_tv_padding"
                        android:text="@string/vode_num" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/layout_view_line" />

                <RelativeLayout
                    android:id="@+id/layout_about"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_downcorners_selector"
                    android:clickable="true"
                    android:padding="@dimen/p_m_layout_padding" >

                    <TextView
                        style="@style/persion_info_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/p_m_tv_padding"
                        android:text="@string/about_lmh" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:paddingRight="5dp"
                        android:src="@drawable/content_area_arrows" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/p_m_layout_margin"
                android:layout_marginRight="@dimen/p_m_layout_margin"
                android:background="@drawable/more_view_none_selector"
                android:orientation="vertical"
                android:padding="1dp" >

                <RelativeLayout
                    android:id="@+id/layout_notice"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_upcorners_selector"
                    android:clickable="true"
                    android:padding="@dimen/p_m_layout_padding" >

                    <TextView
                        style="@style/persion_info_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/p_m_tv_padding"
                        android:text="@string/user_guide" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:paddingRight="5dp"
                        android:src="@drawable/content_area_arrows" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/layout_view_line" />

                <RelativeLayout
                    android:id="@+id/layout_protocol"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_downcorners_selector"
                    android:clickable="true"
                    android:padding="@dimen/p_m_layout_padding" >

                    <TextView
                        style="@style/persion_info_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/p_m_tv_padding"
                        android:text="@string/user_disclaimer" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:paddingRight="5dp"
                        android:src="@drawable/content_area_arrows" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/p_m_layout_margin"
                android:background="@drawable/more_view_none_selector"
                android:orientation="vertical"
                android:padding="1dp" >

                <RelativeLayout
                    android:id="@+id/umeng_feek"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_upcorners_selector"
                    android:clickable="true"
                    android:padding="@dimen/p_m_layout_padding" >

                    <TextView
                        style="@style/persion_info_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/p_m_tv_padding"
                        android:text="@string/user_feedback" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:paddingRight="5dp"
                        android:src="@drawable/content_area_arrows" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/layout_view_line" />

                <RelativeLayout
                    android:id="@+id/umeng_update"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_no_corners_selector"
                    android:clickable="true"
                    android:padding="@dimen/p_m_layout_padding" >

                    <TextView
                        style="@style/persion_info_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/p_m_tv_padding"
                        android:text="@string/user_update" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/layout_view_line" />

                <RelativeLayout
                    android:id="@+id/layout_customer_server"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_item_downcorners_selector"
                    android:clickable="true"
                    android:padding="@dimen/p_m_layout_padding" >

                    <TextView
                        style="@style/persion_info_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/p_m_tv_padding"
                        android:text="@string/contact_number_txt" />

                    <ImageView
                        android:id="@+id/contact_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/contact_number_img_nor"
                        android:contentDescription="@null" />

                    <View
                        android:id="@+id/line"
                        android:layout_width="1dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/contact_number"
                        android:background="@color/maintab_view_line"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />

                    <TextView
                        style="@style/persion_info_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/line"
                        android:padding="@dimen/p_m_tv_padding"
                        android:text="@string/contact_number" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>