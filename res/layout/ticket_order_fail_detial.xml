<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <include layout="@layout/include_title" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/maintab_view_line" />

    <include
        android:id="@+id/layout_http_fail"
        layout="@layout/http_fail"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/ticket_order_detial_selector"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ticket_order_detial_fail_selector"
            android:padding="1dp" >

            <TextView
                android:id="@+id/order_fail_detail_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:textColor="@color/city_list_bg_color"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/order_fail_detail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="@string/ticket_order_detial_fail"
                android:textColor="@color/city_list_bg_color"
                android:textSize="@dimen/font_16" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <RelativeLayout
                android:id="@+id/fail_datila_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/order_fail_datial_date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="@string/ticket_order_leave_date_title"
                    android:textColor="@color/font_color_gray_detial"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/order_fail_datial_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/order_fail_datial_date_txt"
                    android:textColor="@color/font_color_gray_detial"
                    android:textSize="@dimen/font_15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fail_datila_ordernum_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fail_datila_date_layout"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:id="@+id/order_fail_datial_ordernum_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="@string/ticker_order_num_title"
                    android:textColor="@color/font_color_gray_detial"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/order_fail_datial_ordernum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/order_fail_datial_ordernum_txt"
                    android:textColor="@color/font_color_gray_detial"
                    android:textSize="@dimen/font_15" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/fail_datila_ordernum_layout"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/order_fail_detial_tv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/start_station"
                    android:drawablePadding="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/font_color_gray_detial"
                    android:textSize="@dimen/font_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/order_fail_detial_tv_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/end_station"
                    android:drawablePadding="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/font_color_gray_detial"
                    android:textSize="@dimen/font_15"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/order_detial_pay_tv_num_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/ticker_order_pay_num_title"
                android:textColor="@color/font_color_gray_detial"
                android:textSize="@dimen/font_15" />

            <TextView
                android:id="@+id/order_fail_detial_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/order_detial_pay_tv_num_title"
                android:paddingLeft="5dp"
                android:textColor="@color/font_color_gray_detial"
                android:textSize="@dimen/font_18" />

            <TextView
                android:id="@+id/order_fail_detial_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:textColor="@color/font_color_gray_detial"
                android:textSize="@dimen/font_18" />

            <TextView
                android:id="@+id/order_pay_detail_tv_total_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/order_fail_detial_order_price"
                android:text="@string/ticker_order_pay_total_title"
                android:textColor="@color/font_color_gray_detial"
                android:textSize="@dimen/font_15" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>