<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <include layout="@layout/include_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/maintab_view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/more_view_none_selector"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/phone_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:contentDescription="@null"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:paddingTop="15dp"
                android:src="@drawable/login_user_phone" />

            <EditText
                android:id="@+id/phone_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/phone_img"
                android:background="@null"
                android:digits="@string/digits_verify_name"
                android:hint="@string/login_user_phone"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="@dimen/p_m_tv_padding"
                android:singleLine="true"
                android:textSize="@dimen/font_16" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/layout_view_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/password_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:contentDescription="@null"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:paddingTop="15dp"
                android:src="@drawable/login_user_password" />

            <EditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/password_img"
                android:background="@null"
                android:digits="@string/digits_verify"
                android:hint="@string/login_user_password"
                android:inputType="textPassword"
                android:maxLength="20"
                android:minEms="6"
                android:padding="@dimen/p_m_tv_padding"
                android:singleLine="true"
                android:textSize="@dimen/font_16" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/user_login_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ticket_btn_blue_bg_selector"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/login_tv_txt"
        android:textColor="@color/font_color_white"
        android:textSize="@dimen/font_20" />

    <TextView
        android:id="@+id/forget_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:padding="@dimen/p_m_layout_margin"
        android:text="@string/login_forget_password"
        android:textColor="@color/login_forget_password"
        android:textSize="@dimen/font_14" />

</LinearLayout>