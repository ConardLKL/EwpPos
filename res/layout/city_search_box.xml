<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_tabs_bottom_nor"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <EditText
        android:id="@+id/search_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10.0dip"
        android:drawableLeft="@drawable/end_station"
        android:drawablePadding="8.0dip"
        android:ellipsize="none"
        android:hint="输入或选择到达地"
        android:paddingBottom="5.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="30.0dip"
        android:paddingTop="5.0dip"
        android:singleLine="true"
        android:background="@null"
        android:textColor="@color/city_search_txt_color"
        android:textColorHint="@color/city_search_txt_color"
        android:textSize="@dimen/font_16" />

    <ImageButton
        android:id="@+id/ib_clear_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/search_edit"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dip"
        android:background="@null"
        android:padding="0.0dip"
        android:scaleType="centerCrop"
        android:src="@drawable/edittext_clear"
        android:visibility="gone" />

</RelativeLayout>