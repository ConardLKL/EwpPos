<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ticket_order_list_selector"
        android:baselineAligned="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                android:id="@+id/order_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="2014-07-15 08:20"
                android:textColor="@color/ticket_query_leave_date"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_tickernum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/order_start_station_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@drawable/start_station"
                    android:drawablePadding="5dp"
                    android:text="杭州客运中心 站"
                    android:textColor="@color/ticket_query_leave_date"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/order_end_station_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/end_station"
                    android:drawablePadding="5dp"
                    android:text="上海南站"
                    android:textColor="@color/ticket_query_leave_date"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/order_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/ticket_btntv_yellow_bg_selector"
                android:gravity="center"
                android:padding="5dp"
                android:text="立即支付"
                android:textSize="@dimen/font_15" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/layout_view_line" />
    </LinearLayout>

</RelativeLayout>